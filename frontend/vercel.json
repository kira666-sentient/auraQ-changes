{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://aura-q-backend-9urma8ec3-karan-guptas-projects-17f555cf.vercel.app/api/$1" },
    { "source": "/login", "destination": "/pages/login.html" },
    { "source": "/signup", "destination": "/pages/signup.html" },
    { "source": "/dashboard", "destination": "/pages/dashboard.html" },
    { "source": "/", "destination": "/pages/index.html" },
    { "source": "/index", "destination": "/pages/index.html" },
    { "source": "/favicon.ico", "destination": "/public/favicon.ico" },
    { "source": "/assets/:path*", "destination": "/assets/:path*" },
    { "source": "/css/:path*", "destination": "/css/:path*" },
    { "source": "/js/:path*", "destination": "/js/:path*" },
    { "source": "/components/:path*", "destination": "/components/:path*" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(css|js)/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}