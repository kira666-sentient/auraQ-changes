{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    { "handle": "filesystem" },
    { "src": "^/$", "dest": "/pages_old/index.html" },
    { "src": "/index", "dest": "/pages_old/index.html" },
    { "src": "/login", "dest": "/pages_old/login.html" },
    { "src": "/signup", "dest": "/pages_old/signup.html" },
    { "src": "/dashboard", "dest": "/pages_old/dashboard.html" },
    { "src": "/(.*)", "status": 404, "dest": "/pages_old/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/(assets|css|js)/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
