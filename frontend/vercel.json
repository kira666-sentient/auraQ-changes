{
  "version": 2,
  "outputDirectory": ".",
  "builds": [
    { "src": "pages/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://aura-q-backend-9urma8ec3-karan-guptas-projects-17f555cf.vercel.app/api/$1" },
    { "src": "/login", "dest": "/pages/login.html" },
    { "src": "/signup", "dest": "/pages/signup.html" },
    { "src": "/dashboard", "dest": "/pages/dashboard.html" },
    { "src": "^/$", "dest": "/pages/index.html" },
    { "src": "/index", "dest": "/pages/index.html" },
    { "src": "/favicon.ico", "dest": "/public/favicon.ico" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/components/(.*)", "dest": "/components/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(css|js)/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}